-- Function to update tool slot name and behavior when equipped/unequipped
local function updateToolSlotEvents(toolslots)
LocalPlayer.Character.ChildAdded:Connect(function(child)
if child:IsA("Tool") then
for _, slot in pairs(toolslots) do
if slot.tool and slot.tool == child then
slot.button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
slot.button.Text = slot.tool.Name
end
end
end
end)

LocalPlayer.Character.ChildRemoved:Connect(function(child)
if child:IsA("Tool") then
for _, slot in pairs(toolSlots) do
if slot.tool and slot.tool == child then
slot.button.Text = slot.tool.Name
slot.button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
end
end
end
end)
end

-- Function to handle UI updates after making changes
local function updateToolSlotAppearance()
for _, slot in pairs(toolSlots) do
if slot.tool then
if slot.tool == currentlyEquippedTool then
slot.button.BackgroundColor3 = Color3.fromRGB(0, 255, 0);
slot.button.Text = slot.tool.Name;
else
slot.button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
end
slot.button.Text = slot.tool.Name
else
slot.button.Text = "tool " .. 
string.match(slot.button.Name, "%d+")
slot.button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
end
end
end

LocalPlayer.Character.ChildAdded:Connect(function()
updateToolSlotAppearance()
end)

LocalPlayer.Character.ChildRemoved:Connect(function()
updateToolSlotAppearance()
end)


