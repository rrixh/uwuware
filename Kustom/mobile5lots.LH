-- Function to check for duplicate tools in slots
local function isDuplicate(toolName, toolSlots)
for _, slot in pairs(toolSlots) do
if slot.tool and slot.tool.Name == toolName then
return true
end
end
return false
end

-- Function to assign a tool to the next available slot
local function assignToolToSlot(tool, toolSlots)
if isDuplicate(tool.Name, toolSlots) then return end
for i = 1, slots do
if not toolSlots[i].tool then
toolSlots[i].tool = tool
toolSlots[i].button.Text = tool.Name
break
end
end
end

